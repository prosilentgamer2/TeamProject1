@model List<GroupProject.Models.Contact>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.FirstName</td>
                    <td>@contact.LastName</td>
                    <td>@contact.Phone</td>
                    <td>@contact.Email</td>
                    <td>@contact.Category?.Name</td>  <!-- Use null-conditional operator if Category might be null -->
                    <td>
                        <a asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.ContactID" asp-route-slug="@contact.Slug">Edit</a>
                        <a asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.ContactID" asp-route-slug="@contact.Slug">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No contacts available.</p>
}
