@model GroupProject.Models.Contact
@{
    ViewBag.Title = "Details";
}

<h2>@ViewBag.Title</h2>
<form asp-action="Details" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Category.Name">Category</label>
        <input asp-for="Category.Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Organization">Organization</label>
        <input asp-for="Organization" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="DateAdded">Date Added</label>
        <input asp-for="DateAdded" class="form-control" readonly />
    </div>
    <input type="hidden" asp-for="ContactID" />

    <a asp-controller="Contact" asp-action="Edit" asp-route-id="@Model.ContactID" asp-route-slug="@Model.Slug"
        class="btn btn-primary">Edit</a>
    <a asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.ContactID" asp-route-slug="@Model.Slug"
        class="btn btn-danger">Delete</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Home</a>

</form>
